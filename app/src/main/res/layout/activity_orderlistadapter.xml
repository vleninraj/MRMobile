<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    >
    <TextView
        android:id="@+id/tvvoucherno"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_regular"
        android:text="SI123"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvparty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvvoucherno"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/tvvoucherno"
        android:fontFamily="@font/nunito_regular"
        android:text="Party 1"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvvoucherdate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_regular"
        android:text="25-01-2022"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:layout_below="@id/tvvoucherno"
        />
    <TextView
        android:id="@+id/tvgrandamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/nunito_regular"
        android:text="0.00"
        android:textColor="#0D9228"
        android:textSize="22sp"
        android:textStyle="bold"
        />
    <View
        android:fontFamily="@font/nunito_regular"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvvoucherdate"
        android:background="#B8CBEB"/>
</RelativeLayout>
</RelativeLayout>